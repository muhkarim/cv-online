
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>BootstrapDash Wizard</title>
    <link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/urbanui-wizard-free/assets/css/bd-wizard.css">

</head>

<body>
    <main class="my-5">
        <div class="container">
            <div id="wizard">
                    <!-- Biodata -->
                    <h3>
                        <div class="media">
                            <div class="bd-wizard-step-icon"><i class="mdi mdi-account-outline"></i></div>
                            <div class="media-body">
                                <div class="bd-wizard-step-title">Personal Details</div>
                                <div class="bd-wizard-step-subtitle">Step 1</div>
                            </div>
                        </div>
                    </h3>
                    <section>
                        <div class="content-wrapper">
                            <h4 class="section-heading">Enter your Personal details </h4>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="firstName" class="sr-only">User_Id</label>
                                    <input type="text" name="User_Id" id="User_Id" class="form-control" placeholder="User_Id">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="lastName" class="sr-only">IdCard</label>
                                    <input type="text" name="IdCard" id="IdCard" class="form-control" placeholder="Id Card">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="firstName" class="sr-only">FirstName</label>
                                    <input type="text" name="FirstName" id="FirstName" class="form-control" placeholder="First Name">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="lastName" class="sr-only">LastName</label>
                                    <input type="text" name="LastName" id="LastName" class="form-control" placeholder="Last Name">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="phoneNumber" class="sr-only">PlaceOfDate</label>
                                    <input type="text" name="PlaceOfDate" id="PlaceOfDate" class="form-control" placeholder="Place Of Date">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="emailAddress" class="sr-only">BirthDate</label>
                                    <input type="date" name="BirthDate" id="BirthDate" class="form-control"
                                           placeholder="Email Address">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="" class="sr-only">Religion</label>
                                    <select class="custom-select custom-select-lg mb-3" name="Religion">
                                        <option selected>-- Select Religion --</option>
                                        <option value="Islam">Islam</option>
                                        <option value="Katolik">Katolik</option>
                                        <option value="Protestan">Protestan</option>
                                        <option value="Hindu">Hindu</option>
                                        <option value="Budha">Budha</option>
                                        <option value="Other">Other</option>
                                    </select>

                                </div>
                                <div class="form-group col-md-6">
                                    <label for="emailAddress" class="sr-only">Gender</label>
                                    <select class="custom-select custom-select-lg mb-3" name="Gender">
                                        <option selected>-- Select Gender --</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="emailAddress" class="sr-only">Marital Status</label>
                                    <select class="custom-select custom-select-lg mb-3">
                                        <option selected>-- Marital Status --</option>
                                        <option value="Single">Single</option>
                                        <option value="Marriage">Marriage</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="phoneNumber" class="sr-only">PhoneNumber</label>
                                    <input type="text" name="PhoneNumber" id="PhoneNumber" class="form-control" placeholder="Phone Number">
                                </div>

                            </div>

                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label for="" class="sr-only">Address</label>
                                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Address"></textarea>
                                </div>


                            </div>


                        </div>
                    </section>

                    <!-- Educations -->
                    <h3>
                        <div class="media">
                            <div class="bd-wizard-step-icon"><i class="mdi mdi-library-books"></i></div>
                            <div class="media-body">
                                <div class="bd-wizard-step-title">Educations</div>
                                <div class="bd-wizard-step-subtitle">Step 2</div>
                            </div>
                        </div>
                    </h3>
                    <section>
                        <div class="content-wrapper">
                            <h4 class="section-heading">Enter your Last Educations </h4>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="" class="sr-only">Level</label>
                                    <select class="custom-select custom-select-lg mb-3">
                                        <option selected>-- Select Level Educations --</option>
                                        <option value="SMA">SMA</option>
                                        <option value="D3">D3</option>
                                        <option value="S1">S1</option>
                                        <option value="S2">S2</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="Name" class="sr-only">Name School</label>
                                    <input type="text" name="Name" id="Name" class="form-control" placeholder="Name">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="Majors" class="sr-only">Majors</label>
                                    <input type="text" name="Majors" id="Majors" class="form-control" placeholder="Majors">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="YearOfEntry" class="sr-only">Year Of Entry</label>
                                    <input type="text" name="YearOfEntry" id="YearOfEntry" class="form-control" placeholder="Year Of Entry">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="GraduationYear" class="sr-only">Graduation Year</label>
                                    <input type="text" name="GraduationYear" id="GraduationYear" class="form-control" placeholder="Graduation Year">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="FinalValue" class="sr-only">Place</label>
                                    <input type="text" name="FinalValue" id="FinalValue" class="form-control" placeholder="Final Value">
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label for="Place" class="sr-only">Place</label>
                                    <input type="text" name="Place" id="Place" class="form-control" placeholder="Place">
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Work Experience -->
                    <h3>
                        <div class="media">
                            <div class="bd-wizard-step-icon"><i class="mdi mdi-worker"></i></div>
                            <div class="media-body">
                                <div class="bd-wizard-step-title">Work Experience</div>
                                <div class="bd-wizard-step-subtitle">Step 3</div>
                            </div>
                        </div>
                    </h3>
                    <section>
                        <div class="content-wrapper">
                            <h4 class="section-heading">Enter your Employment details </h4>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="CompanyName" class="sr-only">Company Name</label>
                                    <input type="text" name="CompanyName" id="CompanyName" class="form-control" placeholder="Company Name">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="LastPosition" class="sr-only">Last Position</label>
                                    <input type="text" name="LastPosition" id="LastPosition" class="form-control" placeholder="Last Position">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="TypeOfBussiness" class="sr-only">Type Of Bussiness</label>
                                    <input type="text" name="TypeOfBussiness" id="TypeOfBussiness" class="form-control" placeholder="Type Of Bussiness">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="LastSalary" class="sr-only">Last Salary</label>
                                    <input type="text" name="LastSalary" id="LastSalary" class="form-control" placeholder="LastSalary">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="YearStartedWork" class="sr-only">Year Started Work</label>
                                    <input type="text" name="YearStartedWork" id="YearStartedWork" class="form-control" placeholder="Year Started Work">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="YearOfResign" class="sr-only">Year Of Resign</label>
                                    <input type="text" name="YearOfResign" id="YearOfResign" class="form-control" placeholder="Year Of Resign">
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Document -->
                    <h3>
                        <div class="media">
                            <div class="bd-wizard-step-icon"><i class="mdi mdi-file"></i></div>
                            <div class="media-body">
                                <div class="bd-wizard-step-title">Document</div>
                                <div class="bd-wizard-step-subtitle">Step 4</div>
                            </div>
                        </div>
                    </h3>
                    <section>
                        <div class="content-wrapper">
                            <h4 class="section-heading">Upload your Document File (.pdf) </h4>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="fIdCard" class="sr-only">fIdCard</label>
                                    <input type="text" name="fIdCard" id="fIdCard" class="form-control" placeholder="Id Card">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="fResume" class="sr-only">Resume</label>
                                    <input type="text" name="fResume" id="fResume" class="form-control" placeholder="Resume">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="fCV" class="sr-only">CV</label>
                                    <input type="text" name="fCV" id="fCV" class="form-control"
                                           placeholder="CV">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="fFamilyCard" class="sr-only">Family Card</label>
                                    <input type="text" name="fFamilyCard" id="fFamilyCard" class="form-control"
                                           placeholder="Family Card">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="fTranscripts" class="sr-only">Transcripts</label>
                                    <input type="text" name="fTranscripts" id="fTranscripts" class="form-control"
                                           placeholder="Transcripts">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="fDiploma" class="sr-only">Diploma</label>
                                    <input type="text" name="fDiploma" id="fDiploma" class="form-control"
                                           placeholder="Diploma">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label for="fCertificate" class="sr-only">Certificate</label>
                                    <input type="text" name="fCertificate" id="fCertificate" class="form-control"
                                           placeholder="Certificate">
                                </div>
                            </div>
                        </div>
                    </section>


                    <!-- Submit -->
                    <h3>
                        <div class="media">
                            <div class="bd-wizard-step-icon"><i class="mdi mdi-emoticon-outline"></i></div>
                            <div class="media-body">
                                <div class="bd-wizard-step-title">Submit</div>
                                <div class="bd-wizard-step-subtitle">Step 4</div>
                            </div>
                        </div>
                    </h3>
                    <section>
                        <div class="content-wrapper">
                            <h4 class="section-heading mb-5">Accept agreement and Submit</h4>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input" name="" id="" value="checkedValue" checked>
                                    I hereby declare that I had read all the <a href="#!">terms and conditions</a> and all the details
                                    provided my me in this form are true.
                                </label>
                            </div>
                        </div>
                        <button class="btn btn-success" name="Index" type="submit">Submit</button>
                    </section>

                
            </div> <!-- End wizard -->
        </div> <!-- End Container -->
    </main>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <script src="~/urbanui-wizard-free/assets/js/jquery.steps.min.js"></script>
    <script src="~/urbanui-wizard-free/assets/js/bd-wizard.js"></script>
</body>

</html>